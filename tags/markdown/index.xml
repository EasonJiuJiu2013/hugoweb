      &lt;tr&gt;
          &lt;th&gt;斜体&lt;/th&gt;
          &lt;th&gt;粗体&lt;/th&gt;
          &lt;th&gt;代码&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td&gt;&lt;em&gt;斜体文本&lt;/em&gt;&lt;/td&gt;
          &lt;td&gt;&lt;strong&gt;粗体文本&lt;/strong&gt;&lt;/td&gt;
          &lt;td&gt;&lt;code&gt;代码片段&lt;/code&gt;&lt;/td&gt;
      &lt;/tr&gt;
  &lt;/tbody&gt;
&lt;/table&gt;
